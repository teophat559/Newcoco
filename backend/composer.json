{
    "name": "contest-system/backend",
    "description": "Backend API for Contest System",
    "type": "project",
    "require": {
        "php": "^8.1",
        "ext-pdo_sqlsrv": "*",
        "ext-sqlsrv": "*",
        "ext-gd": "*",
        "ext-mbstring": "*",
        "vlucas/phpdotenv": "^5.5",
        "firebase/php-jwt": "^6.4",
        "phpmailer/phpmailer": "^6.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}